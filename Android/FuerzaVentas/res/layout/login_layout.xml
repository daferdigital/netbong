<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffe3e7ea"
    android:orientation="vertical" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5.0dip" >
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@id/contenido"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5.0dip" >

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            style="@style/AppTheme"
            android:layout_width="fill_parent"
            android:layout_height="496dp"
            android:background="@color/blanco"
            android:padding="20.0dip" >

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:weightSum="1.0" >

                <TextView
                    android:id="@id/titulo"
                    android:layout_width="477dp"
                    android:layout_height="90.0dip"
                    android:layout_marginBottom="50.0dip"
                    android:layout_weight="0.49"
                    android:text="Autenticación de Usuario"
                    android:textColor="#ff000000"
                    android:textSize="34.0dip"
                    android:textStyle="bold" />

                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@id/TextView01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Usuario"
                        android:textColor="#ff000000"
                        android:textSize="20.0dip"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@id/et_usuario"
                        android:layout_width="300.0px"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:text="NetBong"
                        android:textColor="#ff000000" />
                </LinearLayout>

                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="20.0dip" >

                    <TextView
                        android:id="@id/TextView02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10.0px"
                        android:text="Contraseña"
                        android:textColor="#ff000000"
                        android:textSize="20.0dip"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@id/et_passwd"
                        android:layout_width="300.0px"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:text=""
                        android:textColor="#ff000000" />
                </LinearLayout>

                <Button
                    android:id="@id/ButtonEmpezar"
                    android:layout_width="150.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Aceptar"
                    android:textColor="#ff000000" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/icono_autorizacion_64" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10.0dip"
                        android:visibility="gone" >

                        <ImageView
                            android:id="@id/imageView2"
                            android:layout_width="600.0dip"
                            android:layout_height="400.0dip"
                            android:src="@drawable/logo" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20.0dip"
                        android:visibility="visible"
                        android:weightSum="1.0" >

                        <ImageView
                            android:layout_width="250.0dip"
                            android:layout_height="200.0dip"
                            android:layout_gravity="center"
                            android:src="@drawable/cimagen_02"
                            android:visibility="gone" />

                        <ImageView
                            android:layout_width="200.0dip"
                            android:layout_height="100.0dip"
                            android:layout_gravity="center"
                            android:src="@drawable/repre03_germisul"
                            android:visibility="gone" />

                        <ImageView
                            android:layout_width="200.0dip"
                            android:layout_height="100.0dip"
                            android:layout_gravity="center"
                            android:src="@drawable/repre04_mediterranea"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10.0dip"
                        android:visibility="gone" >

                        <ImageView
                            android:layout_width="300.0dip"
                            android:layout_height="200.0dip"
                            android:layout_gravity="center"
                            android:src="@drawable/cimagen_03" />

                        <ImageView
                            android:layout_width="250.0dip"
                            android:layout_height="200.0dip"
                            android:layout_gravity="center"
                            android:src="@drawable/cimagen_04" />

                        <ImageView
                            android:layout_width="200.0dip"
                            android:layout_height="100.0dip"
                            android:layout_gravity="center"
                            android:src="@drawable/repre07_shineray"
                            android:visibility="gone" />

                        <ImageView
                            android:layout_width="200.0dip"
                            android:layout_height="100.0dip"
                            android:layout_gravity="center"
                            android:src="@drawable/repre08_trapp"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10.0dip"
                        android:visibility="gone" >

                        <ImageView
                            android:layout_width="300.0dip"
                            android:layout_height="100.0dip"
                            android:layout_gravity="center"
                            android:src="@drawable/repre09_vilmorin" />

                        <ImageView
                            android:layout_width="200.0dip"
                            android:layout_height="100.0dip"
                            android:layout_gravity="center"
                            android:src="@drawable/repre10_wolf" />

                        <ImageView
                            android:layout_width="200.0dip"
                            android:layout_height="100.0dip"
                            android:layout_gravity="center"
                            android:src="@drawable/repre11_ginegar" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/blanco" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/logo2" />

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffffff"
                android:padding="5.0dip"
                android:text="Aplicación desarrollada por NetBong, C.A – www.netbong.com ®Derechos Reservados"
                android:textColor="#ff000000"
                android:textSize="14.0dip" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>